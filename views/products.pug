include incl/header.pug
body
	include incl/navbar.pug
	.container
		.row
			.col-md-3
			.col-md-6
				.form-group
					each option in specifications
						center
							label(for='exampleSelect1' class="search") Select #{option.feature}
							select.form-control(id = option.feature )
								//- option all
								each item in option.possibilities
									option #{item}
						br
					div
						center
							input.btn#btnSearch( type='submit' value='Search')
		.row#aftersearch

	script( src="/js/jquery-3.1.1.min.js")
	script( src="/css/bootstrap/js/bootstrap.min.js")
	script( src="./js/scripts/frontend.js")