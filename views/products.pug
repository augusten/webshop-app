html
	header
		link(href="/css/bootstrap/css/bootstrap.min.css" type="text/css" rel="stylesheet")
		link(href="/css/main.css" type="text/css" rel="stylesheet")
	body
		.container
			.row
				//- form
					//- form( action="/showproducts" method="get" )
				.form-group
					each option in specifications
						label(for='exampleSelect1') Select #{option.feature}
						select.form-control(id = option.feature )
							option all
							each item in option.possibilities
								option #{item}
					div
						input#btnSearch( type='submit' value='Search')
			.row#aftersearch

	script( src="/js/jquery-3.1.1.min.js")
	script( src="/css/bootstrap/js/bootstrap.min.js")
	script( src="./js/scripts/frontend.js")